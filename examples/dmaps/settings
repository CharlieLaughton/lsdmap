remote_host="rice.biou"

# name on remote machine
uname="uname"

# run time in minutes
runtime=180

# number of cores needed
cores=nreplicas

# queue on remote machine
queue="serial"

### MD simulation files (GROMACS)

# intial gro file
startgro="start.gro"
